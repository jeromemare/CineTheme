div.navbar.navbar-default.navbar-fixed-top(ng-controller='NavbarCtrl')
    div.container
        div.navbar-header
            button.navbar-toggle(type='button', ng-click='isCollapsed = !isCollapsed')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href='/') Cin&amp;Theme




        div#navbar-main.navbar-collapse.collapse(collapse='isCollapsed')
            ul.nav.navbar-nav
                li(ng-repeat='item in menu', ng-class='{active: isActive(item.link)}')
                    a(ng-href='{{item.link}}') {{item.title}}

            div.col-sm-8.col-md-8
                form.navbar-form(role='search')
                    div.input-group
                        input.form-control(type='text', ng-model='filterModel.search.name', placeholder='Search movies', name='q', style='padding:6px 6px;')
                        div.input-group-btn
                            button.btn.btn-default(type='submit')
                                i.glyphicon.glyphicon-search
